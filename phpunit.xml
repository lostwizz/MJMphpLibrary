<?xml version="1.0" encoding="UTF-8"?>
	<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         executionOrder="depends,defects"
         forceCoversAnnotation="true"
         beStrictAboutTodoAnnotatedTests="true"
         beStrictAboutTestsThatDoNotTestAnything="false"
         colors="true"
         verbose="true"
         stopOnIncomplete="false"
         stopOnFailure="false"
	>

<!--
bootstrap="src\autoload.php"
-->

	<php>
		<const name="IS_PHPUNIT_TESTING" value="true"/>

        <server name='HTTP_HOST' value='http://localhost' />
        <server name="SERVER_NAME" value="localhost"/>
        <server name="SERVER_PORT" value="80"/>
        <server name="REMOTE_ADDR" value="127.1.2.3"/>
    </php>

    <testsuites>
<!--
		<testsuite name="Wild_card_all_tests">
			        <directory>Tests</directory>
		</testsuite>
-->

		<testsuite name="FlagHandler">
			<file>FlagHandler/Tests/FlagHandler_Test.class.php</file>
		</testsuite>
		<testsuite name="AuthenticationHandler">
			<file>AuthenticationHandler/Tests/DATA_AuthenticateUserDetailsTable_Test.class.php</file>
			<file>AuthenticationHandler/Tests/AuthenticationHandler_Test.class.php</file>

			<file>AuthenticationHandler/Tests/AuthenticationMethodAbstract_Test.class.php</file>

			<file>AuthenticationHandler/Tests/AuthenticationDBmethod_Test.class.php</file>
			<file>AuthenticationHandler/Tests/AuthenticationGuestMethod_Test.class.php</file>
			<file>AuthenticationHandler/Tests/AuthenticationHardCodedMethod_Test.class.php</file>
			<file>AuthenticationHandler/Tests/AuthenticationLDAPmethod_Test.class.php</file>
			<file>AuthenticationHandler/Tests/AuthenticationUnEncryptedPWDmethod_Test.class.php</file>
		</testsuite>

		<testsuite name="DBUtils">
			<file>DButils/Tests/DBUtils_Test.class.php</file>
		</testsuite>
		<testsuite name="Settings">
			<file>Settings/Tests/Settings_Test.class.php</file>
		</testsuite>


	</testsuites>

    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>

</phpunit>